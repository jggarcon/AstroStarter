---
import { Image } from "astro:assets";

type Props = {
  icon: ImageMetadata;
  title: string;
  description: string;
  cardColor?: string;
};

const {
  icon,
  title,
  description,
  cardColor = "var(--card-black)",
} = Astro.props;
---

<div class="container">
  <div class="stack-card" style={`--card-color: ${cardColor};`}>
    <div class="icon-container">
      <Image src={icon} alt="Icon" class="stack-icon" />
    </div>
    <div class="text-container">
      <h2>{title}</h2>
      <p>{description}</p>
    </div>
  </div>
</div>

<style define:vars={{ description }}>
  .container {
    width: 100%;
  }

  p {
    display: none;
    opacity: 0;
  }

  .stack-card {
    text-align: left;
    display: flex;
    align-items: center;
    justify-content: space-evenly;
    background-color: var(--card-color);
    color: white;
    padding: 20px;
    border-radius: var(--radius);
    border: 1px solid rgba(255, 255, 255, 0.1);
    min-width: 20em;
    gap: 20px;
  }

  .stack-card:hover {
    cursor: help;
  }

  .stack-card:hover p {
    display: inline;
    position: absolute;
    text-align: center;
    transform: translate(-75%, -250%);
    color: white;
    background-color: blueviolet;
    padding: 20px;
    border-radius: 8px;
    z-index: 2;
    animation: fadeIn 0.35s ease-in-out forwards;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  .icon-container {
    width: 60px;
    height: 60px;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: rgba(33, 33, 33, 0.82);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 8px;
  }

  .stack-icon {
    width: 40px;
    height: 40px;
    object-fit: contain;
  }

  .text-container h2 {
    font-size: 18px;
    font-weight: bold;
  }

  .text-container p {
    font-size: 14px;
    margin-top: 5px;
    opacity: 0.8;
  }

  @media only screen and (max-width: 45em) {
    .container {
      display: flex;
      flex-direction: column;
      align-items: center;
    }
    .stack-card {
      /* min-width or a fixed width ensures no shrinkage */
      max-width: 20em;
    }
  }
</style>
