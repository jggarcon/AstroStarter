<style>
  .skills-section {
    text-align: center;
    padding: 50px;
  }

  .skills-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 20px;
    justify-content: center;
    align-items: center;
    max-width: 800px;
    margin: auto;
  }

  h1 {
    font-weight: bold;
    margin-bottom: 30px;
    color: var(--grey-200);
    font-size: 4em;
  }

  @media only screen and (max-width: 45em) {
    .skills-grid {
      grid-template-columns: repeat(1, 1fr);
    }
  }
</style>
