<!-- html -->
<style>
  .contact-form {
    max-width: 750px;
    margin: 50px auto;
    padding: 40px;
    background-color: var(--form-bg);
    border-radius: 8px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    display: flex;
    flex-direction: column;
    gap: 10px;
    align-items: center;
  }

  .contact-form h2 {
    text-align: center;
    margin-bottom: 10px;
    color: #333;
  }

  .contact-form label {
    font-weight: 600;
    color: #555;
  }

  .contact-form input {
    width: 100%;
    max-width: 100%;
    padding: 10px;
    border: 1px solid #ccc;
    border-radius: 5px;
    font-size: 16px;
  }

  .contact-form button {
    width: 50%;
    max-width: 100%;
    padding: 10px;
    background: #007bff;
    color: white;
    font-size: 16px;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    transition: background 0.3s;
    margin-top: 10px;
  }

  .contact-form button:hover {
    background: #0056b3;
  }
</style>
